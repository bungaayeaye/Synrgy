<%- include('./layouts/nav') %> 

        <!-- breadcrumb -->
        <section class="pt-3 mt-5">
          <div class="container">
            <div class="row">
              <div class="col">
                <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                      <a href="/"><strong>Cars</strong></a>
                    </li>
                    <li class="breadcrumb-item">
                      <a href="/"><strong>List cars</strong></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Add new car</li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </section>
        <!-- akhir breadcrum -->

        <!-- title -->
        <section class="layout">
          <div class="container">
            <div class="row justify-content-between content">
              <div class="col-2">
                <h4>Add New Car</h4>
              </div>
            </div>
          </div>
        </section>
        <!-- akhir title -->
        <!-- form -->
        <section>
          <form action="/add-car" class="needs-validation" method="post" enctype="multipart/form-data">
            <div class="container" style="background: #ffffff; padding-top: 25px; padding-bottom: 25px">
              <!-- input -->
              <div class="row align-items-center py-2">
                <div class="col-2">
                  <label for="nama">Nama<span style="color: red">*</span></label>
                </div>
                <div class="col-5">
                  <input name="nama" id="nama" type="text" class="form-control" required />
                </div>
              </div>
              <!-- akhir input -->
              <!-- input -->
              <div class="row align-items-center py-2">
                <div class="col-2">
                  <label for="">Sewa Per Hari<span style="color: red">*</span></label>
                </div>
                <div class="col-5">
                  <input type="number" class="form-control" id="sewa_per_hari" name="sewa_per_hari" required />
                </div>
              </div>
              <!-- akhir input -->
              <!-- input -->
              <div class="row align-items-center py-2">
                <div class="col-2">
                  <label for="ukuran">Ukuran<span style="color: red">*</span></label>
                </div>
                <div class="col-5">
                  <select name="ukuran" id="ukuran" class="form-select" aria-label="Default select example" required>
                    <option value="Small">Small</option>
                    <option value="Medium">Medium</option>
                    <option value="Large">Large</option>
                  </select>
                </div>
              </div>
              <!-- akhir input -->
              <!-- input -->
              <div class="row align-items-center py-2">
                <div class="col-2">
                  <label for="foto">Pas Foto<span style="color: red">*</span></label>
                </div>
                <div class="col-5">
                  <input name="foto" class="form-control" type="file" id="foto" required />
                </div>
              </div>
              <div class="row">
                <div class="col"></div>
              </div>
              <!-- akhir input -->
            </div>
            <div class="container pb-4" style="position: fixed; bottom: 0; padding-left: 5%">
              <div class="row">
                <div class="col-1">
                  <a href="/" class="btn btn-outline-primary">Cancel</a>
                </div>
                <div class="col-1">
                  <input class="btn btn-primary" type="submit" value="Save" />
                </div>
              </div>
            </div>
            <!-- button -->
          </form>
        </section>
        <!-- akhir form -->
        <!-- Button trigger modal -->

        <!-- akhir flex -->
      </div>
    </div>

